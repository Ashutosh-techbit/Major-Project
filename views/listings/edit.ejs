<% layout('./layouts/boilerplate') -%>
<body>
       <div class="row">
      <div class="col-8 offset-2">
     <br><br>
        <h3>Edit your Listings</h3>
        <br />
        <form action="/listings/<%= listing._id%>?_method=PUT" method="post">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control">
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" ><%= listing.description %></textarea>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" name="listing[price]" class="form-control" value="<%= listing.price %>">
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input type="text" name="listing[image]"  class="form-control" value="<%= listing.image %>">
      </div>
  
      <div class="row">
          <div class="col-md-7">
  
            <div class="mb-3">
              <label for="location" class="form-label">Location</label>
              <input type="text" name="listing[location]" class="form-control"  value="<%= listing.location %>">
      </div>
    </div>
      
    <div class="col-md-5">
      
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" class="form-control" value="<%= listing.country%>">
      </div>
    </div>
  </div>
      <div class="mt-3">
        <button class="btn btn-dark edit-btn">Add</button>
      </div>
    </form>
  
  </div>
  </div>
  <br><br>
</body>
